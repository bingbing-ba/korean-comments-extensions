{
  "name": "Korean Comments",
  "version": "1.0.0",
  "description": "Extension for Korean comments of some Youtube videos",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["declarativeContent", "tabs"],
  "page_action": {
    "default_icon": {
      "16":"images/icon16.png",
      "32":"images/icon32.png",
      "128":"images/icon128.png"
    },
    "default_title": "Korean Comments",
    "default_popup": "popup.html"
  },
  "icons": {
    "16":"images/icon16.png",
    "32":"images/icon32.png",
    "128":"images/icon128.png"
  }
}
